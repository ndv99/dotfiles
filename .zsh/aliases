# dotfile management
alias dotfiles='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias dfl='dotfiles'

# "yarn" commands
alias y="yarn"
alias yc="yarn clean"
alias ys="yarn start"
alias yys="yarn && yarn start"
alias ycs="yarn clean && yys"
alias yd="yarn dev"
alias yyd="yarn && yd"
alias yt="yarn test"
alias yl="yarn lint"
alias ylt="yarn lint && yarn test"
alias yylt="yarn && yarn lint && yarn test"

# docker
alias dcu="docker compose up"
alias dcd="docker compose down"

# "lxc" commands
alias lxcl="watch lxc list --all-projects"

# misc
alias ns="notify-send"
