# dotfile management
alias dotfiles='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias dfl='dotfiles'

# "yarn" commands
alias y="yarn"
alias ya="yarn add"
alias yad="yarn add -D"
alias yr="yarn remove"
alias yc="yarn clean"
alias ys="yarn start"
alias yys="yarn && yarn start"
alias ycs="yarn clean && yys"
alias yd="yarn dev"
alias yyd="yarn && yd"
alias ycd="yarn clean && yyd"
alias yt="yarn test"
alias yl="yarn lint"
alias ylt="yarn lint && yarn test"
alias yylt="yarn && yarn lint && yarn test"
alias yb="yarn build"
alias ycb="yarn clean && yarn && yarn build"

# docker
alias dcu="docker compose up"
alias dcd="docker compose down"
alias dce="docker compose exec"

# "lxc" commands
alias lxcl="watch lxc list --all-projects"

# misc
alias ns="notify-send"
alias nwd="notify-when-done"

# backup to NAS
rsync -av -e ssh /home/noodl ndv99@192.168.0.3::NetBackup/NICKDV-DESKTOP/home/ --exclude '.cache' --exclude 'SteamLibrary'

